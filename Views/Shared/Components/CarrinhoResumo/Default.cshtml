@model CarrinhoViewModel
@if (Model.Carrinho.CarrinhoItens.Count > 0)
{
    <a asp-controller="Carrinho" asp-action="Index" class="btn btn-outline-danger fs-5 ">
        <span ><i class="bi bi-cart"></i></span>
        <span style="color:rgb(255, 255, 255)">
            @Model.Carrinho.CarrinhoItens.Count
        </span>
    </a>
}
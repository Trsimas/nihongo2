@model LoginViewModel
<table class="table">
    <tr>

        <td>
            <div class="row" >
                <div class="container bg-danger p-5 col-7">
                <div class="col-9 col-md-9 col-lg-9 mx-auto">

                    <h2 class="ceasar text-dark">Login</h2>
                    <form asp-controller="Account" asp-action="Login" method="post" class="form-horizontal" role="form">
                        <hr class="col-12 text-dark">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <input type="hidden" asp-for="ReturnUrl" />
                        <div class="form-group text-light">
                            <label asp-for="UserName" class="col-md-2 control-label"></label>
                            <div class="ms-4 ms-auto">
                                <input asp-for="UserName" class="form-control" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group text-light">
                            <label asp-for="Password" class="col-md-2 control-label"></label>
                            <div class="ms-4 ms-auto">
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-8 mt-2">
                                <input type="submit" class="btn btn-outline-light" value="Logar" />
                            </div>
                        </div>
                    </form>
                </div>
                </div>
            </div>
        </td>
    </tr>
</table>

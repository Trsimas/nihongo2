@model Item
<div class="container">
    <div class="row">
        <div class="card">
        
            <div class="card-block">
                <h2 class="card-title ceasar">@Model.Nome</h2>
                <p class="card-text">
                <h5>@Model.DescricaoDetalhada</h5>
                </p>
                <p class="btn btn-group align-content-lg-end">
                    <a asp-controller="Item" asp-action="List" class="btn btn-outline-danger">Ver todos os itens</a>

                    <a class="btn btn-danger" id="cartButton" asp-controller="Carrinho"
                        asp-action="AdicionarItemNoCarrinhoCompra" asp-route-itemId="@Model.ItemId">

                        Adicionar @Model.Nome ao carrinho
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>
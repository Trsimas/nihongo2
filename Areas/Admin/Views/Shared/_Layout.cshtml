<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - nihongo2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/nihongo2.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
             <div class="p-3">
                <img src="~/imagens/logo.png">
            </div>
            <div class="container-fluid">
                <a class="navbar-brand ceasar fs-2 col" asp-area="" asp-controller="Home" asp-action="Index">
                    Nihongo
                    <br>
                    Restaurante

                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between ">
                    <ul class="navbar-nav flex-grow-5">
                        <li class="nav-item">
                            <a class="nav-link text-light fs-5" asp-area="" asp-controller="Home" asp-action="Index">HOME</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light fs-5" asp-area="Admin" asp-controller="AdminCategoria" asp-action="Index">CATEGORIA</a>
                        </li>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light fs-5" asp-area="Admin" asp-controller="AdminItem" asp-action="Index">ITEM</a>
                        </li>
                        <li>
                            @await Html.PartialAsync("_Login")
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-ligth" asp-area="Admin" asp-controller="AdminRelatorioVendas" asp-action="Index">Relatório vendas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-ligth" asp-area="Admin" asp-controller="AdminXml"
                                asp-action="Index">Exportar xml</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top  text-light bg-dark">
        <div class="container p-4 text-white ">
            &copy; 2023 - Nihongo Restaurante - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
             <div class="me-auto fs-4">
                <i class="bi bi-facebook"></i>
                <i class="bi bi-instagram"></i>
                <i class="bi bi-twitter"></i>
            </div>

        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
